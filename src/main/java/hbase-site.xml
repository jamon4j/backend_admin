<configuration>
<property> 
<name>hbase.zookeeper.quorum</name> 
<!--<value>bjlg-c16-dataanalysis72.ksc.com,vm10-0-3-192.ksc.com,vm10-0-3-193.ksc.com</value>-->
<value>10.0.3.72,10.0.3.192,10.0.3.193</value>
    <description>The directory shared by RegionServers.</description>
</property>

<property> 
<name>hbase.zookeeper.property.dataDir</name> 
<value>/data/kscdc/zookeeper/data</value>
<description>Property from ZooKeeper's config zoo.cfg.The directory where the snapshot is stored.</description> 
</property>

<property> 
<name>hbase.rootdir</name> 
<value>hdfs://vm10-0-3-187.ksc.com:9000/user/hbase</value> 
<description>The directory shared by RegionServers.</description>  
</property>

<property>
<name>hbase.tmp.dir</name>
<value>/tmp/hbase/var</value>
</property>

<property> 
<name>hbase.cluster.distributed</name> 
<value>true</value> 
<description>The mode the cluster will be in. Possible values are 
false: standalone and pseudo-distributed setups with managed Zookeeper 
true: fully-distributed with unmanaged Zookeeper Quorum (see hbase-env.sh)</description>
</property>

<property> 
<name>hbase.zookeeper.property.clientPort</name>  
<value>2181</value>  
</property>

<property>
<name>hbase.tmp.dir</name>
<value>/data1/hbase_tmp,/data2/hbase_tmp,/data3/hbase_tmp,/data4/hbase_tmp,/data5/hbase_tmp,/data6/hbase_tmp,/data7/hbase_tmp,/data8/hbase_tmp,/data9/hbase_tmp,/data10/hbase_tmp,/data11/hbase_tmp,/data12/hbase_tmp</value>
