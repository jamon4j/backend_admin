<value>10</value>
</property>

<property>
<name>hbase.balancer.period</name>
<value>600000</value>
</property>

<property>
<name>hbase.client.write.buffer</name>
<value>2097152</value>
</property>

<property>
<name>hbase.hregion.majorcompaction</name>
